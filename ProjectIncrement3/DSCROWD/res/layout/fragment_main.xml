<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_btns"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="#ADD6FF"
        android:drawSelectorOnTop="true"
        android:entries="@array/events"
       />

    <ImageButton
        android:id="@+id/btn_analyst"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@null"
        android:contentDescription="@string/analyst_desc"
        android:onClick="analystOnClick"
        android:src="@drawable/analyst" />

    <ImageButton
        android:id="@+id/btn_coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@null"
        android:contentDescription="@string/coordinator_desc"
        android:onClick="coordinateOnClick"
        android:src="@drawable/coordinator" />

</LinearLayout>